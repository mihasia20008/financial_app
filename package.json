{
  "name": "test-node",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "build": "npm run clean-dist && webpack -p",
    "clean-dist": "rm -f -r -d dist",
    "develop": "export NODE_ENV=develop && npm run server",
    "lint": "npm run lint:js && npm run lint:sass",
    "lint:js": "eslint --ext js --ext jsx src || exit 0",
    "lint:sass": "stylelint ./src/**/*.scss || exit 0",
    "server": "nodemon ./bin/server",
    "start": "export NODE_ENV=production && npm run build && npm run server",
    "test": "jest --watch --coverage"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "modules": false
        }
      ],
      "react"
    ],
    "plugins": [
      "react-hot-loader/babel",
      "transform-decorators-legacy",
      "transform-class-properties",
      [
        "module-resolver",
        {
          "root": [
            "./src"
          ]
        }
      ]
    ],
    "env": {
      "test": {
        "presets": [
          "env",
          "react"
        ],
        "plugins": [
          "transform-es2015-modules-commonjs"
        ]
      }
    }
  },
  "stylelint": {
    "extends": "stylelint-config-standard"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-module-resolver": "^3.0.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "chai": "^4.1.2",
    "css-loader": "^0.28.8",
    "enzyme": "^3.3.0",
    "eslint": "^4.15.0",
    "eslint-plugin-jest": "^21.6.1",
    "eslint-plugin-react": "^7.5.1",
    "file-loader": "^1.1.6",
    "html-webpack-plugin": "^2.30.1",
    "identity-obj-proxy": "^3.0.0",
    "image-webpack-loader": "^3.4.2",
    "jsdom": "^11.5.1",
    "mocha": "^4.1.0",
    "node-sass": "^4.7.2",
    "nodemon": "^1.14.3",
    "postcss-loader": "^2.0.10",
    "react-addons-test-utils": "^15.6.2",
    "react-hot-loader": "^3.1.3",
    "sass-loader": "^6.0.6",
    "sequelize-cli": "^3.2.0",
    "style-loader": "^0.19.1",
    "stylelint": "^8.4.0",
    "stylelint-config-standard": "^18.0.0",
    "stylelint-webpack-plugin": "^0.9.0",
    "webpack": "^3.10.0",
    "webpack-dev-middleware": "^2.0.4",
    "webpack-hot-middleware": "^2.21.0",
    "webpack-merge": "^4.1.1"
  },
  "dependencies": {
    "body-parser": "^1.18.2",
    "express": "^4.16.2",
    "history": "^4.7.2",
    "material-ui": "^0.20.0",
    "morgan": "^1.9.0",
    "pg": "^7.4.0",
    "pg-hstore": "^2.3.2",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-redux": "^5.0.6",
    "react-router": "^4.2.0",
    "react-router-dom": "^4.2.2",
    "redux": "^3.7.2",
    "redux-logger": "^3.0.6",
    "redux-thunk": "^2.2.0",
    "sequelize": "^4.28.6",
    "whatwg-fetch": "^2.0.3"
  }
}
